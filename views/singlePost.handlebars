<div class="card m-5" >
  <div class="card-header bg-dark text-light">
    
    <div class="row">
      <div class="col-sm-8">
        <h3>{{post.postTitle}}</h3>  
      </div>
      <div class="col-sm-4">
        Posted by {{post.user.username}} on {{post.postDate}}
      </div>
    </div>

  </div>

  <div class="card-body">
    <p>
      {{post.postContent}}
    </p>

  </div>
  <div class="row">
      <div class="col-sm-8">
        <h3>Comment</h3>  
      </div>
     <div class="form-group">
        {{!-- <label for="postContent">Content</label> --}}
        <br/>
        <textarea class="form-input w-100" id="commentPost" name="commentPost"></textarea>
      </div>
    </div>

</div>