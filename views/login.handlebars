<div class="card">
  <div class="card-header bg-dark text-light">
    Login
  </div>
  <div class="text-danger">
    {{message}}
   </div>
  <div class="card-body">
    <form class="form login-form" method="post" action="/api/users/login">
      <div class="form-group">
        <label for="usernameField">Username</label>
        <br/>
        <input class="form-input" type="text" id="usernameField" name="usernameField"/>
      </div>
      <div class="form-group">
        <label for="passwordField">Password</label>
        <br/>
        <input class="form-input" type="password" id="passwordField" name="passwordField"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">
          Login
        </button>
      </div>
      <br />
      <a href="/signup">Sign up instead</a>
    </form>
  </div>
</div>