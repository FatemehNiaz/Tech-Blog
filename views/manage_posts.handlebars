{{#each posts as |post|}}

<div class="card m-5" >
  <div class="card-header bg-dark text-light">
    
    <div class="row">
      <div class="col-sm-8">
        <h3>{{post.postTitle}}</h3>  
      </div>
      <div class="col-sm-4">
        Posted by {{post.user.username}} on {{post.postDate}}
      </div>
    </div>

  </div>

  <div class="card-body">
    <p>
      {{post.postContent}}
    </p>
    <form method="post" action="/update_post">
      <input type="hidden" id="id" name="id" value="{{post.id}}" />
      <button class="btn btn-primary w-100" type="submit">Update Post</button>
    </form>
    <form method="post" action="/delete_post">
      <input type="hidden" id="id" name="id" value="{{post.id}}" />
      <button class="btn btn-danger w-100" type="submit">Delete Post</button>
    </form>
  </div>

</div>

{{/each}}