{{#each posts as |post|}}

<div class="card m-5" >
  <div class="card-header bg-dark text-light">
    
    <div class="row">
      <div class="col-sm-8">
        <h3>
          <a href="/managePost/{{post.id}}">  {{post.postTitle}} </a>

        </h3>  
      </div>
      <div class="col-sm-4">
        Posted by {{post.user.username}} on {{post.postDate}}
      </div>
    </div>

  </div>

  <div class="card-body">
    <p>
      {{post.postContent}}
    </p>

  </div>

</div>

{{/each}}
<div class="row">
<div class="col-sm-12 text-center">
<a class="btn btn-primary" href="/create_post">+ New Post</a>
</div>
</div>